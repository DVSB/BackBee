{% set text = this.getObject() %}
<div class="form-group">
    <label class="sr-only" for="">{{ text.getLabel() }}</label>
    <input type="text" 
        {% if text.getValue() is not null%}value="{{ text.getValue() }}"{% endif %} 
        class="form-control" 
        {% if text.getPlaceholder() is not null %}placeholder="{{ text.getPlaceholder() }}"{% endif %}
    >
</div>